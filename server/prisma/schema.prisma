generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model user_roles {
  id    Int     @id @default(autoincrement())
  name  String  @db.VarChar
  users users[]
}

model users {
  id          Int        @id @default(autoincrement())
  nickname    String     @unique @db.VarChar(50)
  email       String     @unique @db.VarChar(150)
  hashed_code String     @db.VarChar
  role_id     Int
  user_roles  user_roles @relation(fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "role_id_fk")
}
